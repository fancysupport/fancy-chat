#fancy-chat
	position fixed

	left 50%
	top 50%

	width 650px
	margin-left -(@width / 2)
	height 450px
	margin-top -(@height / 2)

	z-index 1234

	box-shadow 0 0 0 1px black

	&.hide
		display none

	&.block
		display block

	.header
		height 80px
		box-shadow 0 0 0 1px black

		span
			position absolute
			top 25px
			left 50px
			font-size 18pt
			width 550px
			text-align center

		a
			position absolute
			right 32px
			top 31px
			width 25px
			height 25px
			cursor pointer
			text-align center

			&#fancy-close
				right 5px

	#fancy-messages
		margin-top 1px
		height 250px
		box-shadow 0 0 0 1px black
		overflow-y auto

		.message
			overflow hidden
			margin 0

		.in
			background-color #EBEBEB

			.message
				padding-left 10px

		.out .message
			text-align right
			padding-right 10px

	.send
		position relative
		height 120px

		button
			position absolute
			right 5px
			top 8px
			width 12%
			height 104px

		.message
			width 85%
			margin 0
			padding-top 8px
			padding-left 8px

			textarea
				width 100%
				resize none
				height 104px