vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	{prop} args

border-radius()
	vendor(border-radius, arguments)

user-select()
	vendor(user-select, arguments)

box-sizing()
	vendor(box-sizing, arguments)



#fancy-chat
	position fixed

	left 50%
	top 50%

	width 650px
	margin-left -(@width / 2)
	height 450px
	margin-top -(@height / 2)

	z-index 1234

	box-shadow 0 0 0 1px black

	*
		box-sizing(border-box)
		margin 0
		padding 0

	&.hide
		display none

	&.block
		display block

	.header
		height 80px
		box-shadow 0 0 0 1px black
		background-color #EAEAEA

		span
			position absolute
			width 550px
			top 25px
			left ((650 - @width)/2)px
			font-size 18pt
			text-align center

		a
			position absolute
			right 32px
			top 31px
			width 25px
			height 25px
			cursor pointer
			text-align center

			&#fancy-close
				right 5px

	#fancy-messages
		margin-top 1px
		height 250px
		box-shadow 0 0 0 1px black
		overflow-y auto

		.message
			overflow hidden
			margin 0

		.in
			background-color #EBEBEB

			.message
				padding-left 10px

		.out .message
			text-align right
			padding-right 10px

	.send
		position relative
		height 120px

		#fancy-send
			position absolute
			right 8px
			top 8px
			width 13%
			height 104px
			line-height @height

			cursor pointer
			display inline-block
			text-align center

			outline none
			border none
			background-color #D6D6D6
			color #808080

			border-radius(0.25em)
			user-select(none)

		.message
			width 550px
			margin 0
			padding-top 8px
			padding-left 8px

			textarea
				width 100%
				height 104px
				resize none

				padding 0.6em 1em

				line-height 1.33
				vertical-align top

				outline none

				border-radius(0.3125em)
