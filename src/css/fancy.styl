vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	-o-{prop} args
	{prop} args

border-radius()
	vendor(border-radius, arguments)

user-select()
	vendor(user-select, arguments)

box-sizing()
	vendor(box-sizing, arguments)

#fancysupport
	z-index 9999998
	position fixed
	font-family 'Helvetica Neue', Helvetica, Arial, sans-serif

	.activator
		position fixed
		right 20px
		bottom 20px
		width 50px
		height 50px
		background-color #0A435F
		font-size 0
		color #fff
		border-radius 5px
		text-align center
		cursor pointer
		z-index 9999999

		svg
			fill #fff
			margin 5px

		&.hide
			display none

	.chat
		border-left 1px solid #dadada
		position fixed
		right 0
		bottom 0
		height 100%
		width 350px
		background-color #fafafa

		.header
			background-color #0A435F
			height 40px
			box-sizing border-box

			.title
				color #fff
				font-size 16px
				line-height 40px
				margin-left 10px

			.close
				float right
				padding 0
				line-height 0
				cursor pointer

				svg
					margin 12px
					width 16px
					height 16px
					fill #fff

		.messages
			box-sizing border-box

		.input
			box-sizing border-box
			border 1px solid #000

			.input-container
				position relative

				textarea
				.textcopy
					width 330px
					box-sizing border-box
					font-size 1em
					border 1px solid #dadada
					border-radius 0
					padding 5px
					overflow-y scroll
					font-family 'Helvetica Neue', Helvetica, Arial, sans-serif

				textarea
					resize none
					height 100%
					position absolute
					margin 0 10px

				.textcopy
					visibility hidden
					min-height 30px
					max-height 200px
					margin 10px
					word-break break-word
					padding-bottom 1.2em

				.send
					height 30px
					color #0A435F
					border 0
					font-size 16px
					font-weight bold
					display inline-block
					line-height 30px
					padding 0 10px
					vertical-align top

			.powered-by-fancy
				text-align center
				padding 5px
				font-size 12px
				color #9a9a9a
				a
					font-size 12px
					color #9a9a9a



@import "media"
