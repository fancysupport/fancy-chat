vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	{prop} args

border-radius()
	vendor(border-radius, arguments)

user-select()
	vendor(user-select, arguments)

box-sizing()
	vendor(box-sizing, arguments)

icon_close = 'data:image/png;base64,'
icon_chats = 'data:image/png;base64,'
icon_new = 'data:image/png;base64,'

#fancy-chat
	position fixed

	left 50%
	top 50%

	width 500px
	margin-left -(@width / 2)
	height 525px
	margin-top -(@height / 2)

	z-index 1234

	font-size 14px
	color #000
	font-family "Open Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif

	background-color #e9e9e9
	border-radius(4px)

	*
		box-sizing(border-box)
		margin 0
		padding 0

	.send
		position relative
		height 15%

		.message
			width 80%
			height 100%
			margin 0
			padding 5px 5px 15px 20px

#fancy-textarea
	width 100%
	height 100%
	resize none

	padding 0.6em 1em

	line-height 1.33
	vertical-align top

	outline none

	border-radius(0.3125em)

#fancy-send
	position absolute
	right 20px
	top 5px
	width 15.5%
	height 59px
	line-height @height

	cursor pointer
	display inline-block
	text-align center

	outline none
	border none
	background-color #c0392b
	color #fff

	border-radius(0.25em)
	user-select(none)

#fancy-header
	height 80px
	background-color #c0392b
	color #fff
	border-top-left-radius 4px
	border-top-right-radius 4px

	span
		position absolute
		width 80%
		top 25px
		left 10%
		font-size 18pt
		text-align center

	a
		position absolute
		right 32px
		top 31px
		width 32px
		height 22px
		cursor pointer
		background-repeat no-repeat

		&.chats
			background-image url(icon_chats)

		&.new
			background-image url(icon_new)

		&:last-child
			right 5px
			background-image url(icon_close)

#fancy-listings
	height 369px
	margin-top 1px
	overflow-y auto

	.listing
		cursor pointer
		padding 8px
		position relative

		&:hover
			background-color #EBEBEB

		.title
			font-weight bold

		.time
			position absolute
			right 9px
			top 9px
			color grey
			font-size 12px

		.content
			height 20px
			overflow hidden
			text-overflow ellipsis

#fancy-messages
	height 70%
	overflow-y auto
	padding 0 20px

	.message
		margin 7px 0
		width 100%
		position relative
		min-height 60px

	.text
		position relative
		border-radius 4px
		padding 10px 15px
		background-color #fff
		word-wrap break-word

		&:after
			content ' '
			position absolute
			width 0
			height 0
			border 9px solid
			top 10px

		.name
			font-weight bold
			margin-bottom 3px

		.time
			position absolute
			top 10px
			right 15px
			font-size 12px
			color #808080

	.info
		width 50px
		text-align center
		position absolute

		.avatar
			margin 0 auto
			display block

	.out
		float left

		.text
			margin-left 70px

			&:after
				left -16px
				border-color transparent #fff transparent transparent

		.info
			left 0

	.in
		float right

		.text
			margin-right 70px

			&:after
				right -15px
				border-color transparent transparent transparent #fff

		.info
			right 0

	.out, .in
		clear both

.fancy-cf:before,
.fancy-cf:after
	content " "
	display table

.fancy-cf:after
	clear both