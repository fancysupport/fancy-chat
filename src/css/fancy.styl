vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	-o-{prop} args
	{prop} args

border-radius()
	vendor(border-radius, arguments)

user-select()
	vendor(user-select, arguments)

box-sizing()
	vendor(box-sizing, arguments)

mborder(dir)
	border-{dir} 1px solid #7F8C8D

@font-face {
	font-family: 'fancy';
	src:url('//cdn.fancy.support/fonts/fancy.eot?-9bi1ry');
	src:url('//cdn.fancy.support/fonts/fancy.eot?#iefix-9bi1ry') format('embedded-opentype'),
		url('//cdn.fancy.support/fonts/fancy.woff?-9bi1ry') format('woff'),
		url('//cdn.fancy.support/fonts/fancy.ttf?-9bi1ry') format('truetype'),
		url('//cdn.fancy.support/fonts/fancy.svg?-9bi1ry#fancy') format('svg');
	font-weight: normal;
	font-style: normal;
}

[class^="fancy-icon-"], [class*=" fancy-icon-"] {
	font-family: 'fancy';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	user-select(none)
	font-size 32px

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.fancy-icon-pencil:before {
	content: "\e600";
}

.fancy-icon-lifebuoy:before {
	content: "\e603";
}

.fancy-icon-cross:before {
	content: "\e601";
}

.fancy-icon-list:before {
	content: "\e602";
}

#fancy-activator
	position fixed
	right 20px
	bottom 20px

	width 35px
	height 35px

	background-color #c0392b
	font-size 0
	padding 5px
	color #fff
	border-radius 5px
	text-align center
	cursor pointer

	z-index 99998

	#fancy-unread-counter
		font normal normal normal 30px/35px sans-serif

		&:empty
			font normal normal normal 32px/35px 'fancy'
			text-rendering auto
			-webkit-font-smoothing antialiased
			-moz-osx-font-smoothing grayscale

			&:before
				content "\e603"

#fancy-chat
	position fixed

	left 50%
	top 50%

	width 500px
	margin-left -(@width / 2)
	height 525px
	margin-top -(@height / 2)

	z-index 99999

	line-height 1.4
	font-size 14px
	color #000
	font-family "Open Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif

	background-color #e9e9e9
	border-radius(4px)

	*
		box-sizing(border-box)
		margin 0
		padding 0
		text-decoration none

	.fancy-send
		position relative
		height 15%
		mborder(left)
		mborder(right)
		mborder(bottom)
		border-bottom-left-radius 4px
		border-bottom-right-radius 4px

		.fancy-message
			width 80%
			height 100%
			margin 0
			padding 0.7% 1.25% 2.9% 3.9%

	.fancy-add-height
		height 100%

	.fancy-hide
		display none

#fancy-textarea
	width 100%
	height 100%
	resize none

	min-height 34px
	padding 0.6em 1em

	line-height 1.33
	vertical-align top

	outline none
	border none

	border-radius(4px)

#fancy-send
	position absolute
	right 4%
	top 6.25%
	width 15.5%
	height 75%
	line-height 58px

	cursor pointer
	display inline-block
	text-align center

	outline none
	border none
	background-color #c0392b
	color #fff

	border-radius(4px)
	user-select(none)

#fancy-header
	height 15%
	background-color #c0392b
	border-top-left-radius 4px
	border-top-right-radius 4px
	position relative

	span
		position relative
		top 32%
		left 5%
		font-size 18pt
		color #fff

	a
		position absolute
		right 40px
		top 32%
		cursor pointer
		color #fff

	.fancy-icon-cross
		right 8px

	.fancy-icon-pencil
		top 37.5%
		font-size 24px

#fancy-listings
	height 100%

	.fancy-powered-by
		text-align center
		height 5%
		width 100%
		mborder(bottom)
		mborder(left)
		mborder(right)
		border-bottom-left-radius 4px
		border-bottom-right-radius 4px
		padding-top 5px

		a
			color #7F8C8D
			font-size 14px

	.fancy-empty
		text-align center
		padding 20px
		color #7f8c8d
		font-size 16px

	.fancy-listings
		height 80%
		overflow-y auto
		mborder(left)
		mborder(right)

		.fancy-listing
			cursor pointer
			padding 10px 20px
			position relative
			color #7f8c8d

			&.fancy-unread
				color #000

			.fancy-avatar
				position absolute
				top 16px
				width 50px
				height 50px

			.fancy-text
				margin-left 60px
				margin-top 5px

			&:hover
				background-color #D3D3D3

			.fancy-title
				font-weight bold

			.fancy-time
				position absolute
				right 20px
				top 9px
				color #808080
				font-size 12px

			.fancy-content
				height 19px
				overflow hidden
				text-overflow ellipsis

			.fancy-reply
				font-style italic

#fancy-messages
	height 70%
	overflow-y auto
	padding 0 3.9%
	mborder(left)
	mborder(right)

	.fancy-message
		margin 7px 0
		width 100%
		position relative
		min-height 60px

	.fancy-text
		position relative
		border-radius(4px)
		padding 10px 15px
		background-color #fff
		word-wrap break-word
		box-shadow 0 1px 0 0 rgba(0, 0, 0, 0.1)

		&:after
			content ' '
			position absolute
			width 0
			height 0
			border 9px solid
			top 10px

		.fancy-name
			font-weight bold
			margin-bottom 3px

		.fancy-time
			position absolute
			top 10px
			right 15px
			font-size 12px
			color #808080

	.fancy-info
		width 50px
		text-align center
		position absolute

		.fancy-avatar
			margin 0 auto
			display block
			width 50px
			height 50px

	.fancy-out
		float left

		.fancy-text
			margin-left 70px

			&:after
				left -17px
				border-color transparent #fff transparent transparent

		.fancy-info
			left 0

	.fancy-in
		float right

		.fancy-text
			margin-right 70px

			&:after
				right -17px
				border-color transparent transparent transparent #fff

		.fancy-info
			right 0

	.fancy-out, .fancy-in
		clear both

.fancy-cf:before,
.fancy-cf:after
	content " "
	display table

.fancy-cf:after
	clear both