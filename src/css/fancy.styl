vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	{prop} args

border-radius()
	vendor(border-radius, arguments)

user-select()
	vendor(user-select, arguments)

box-sizing()
	vendor(box-sizing, arguments)

mborder(dir)
	border-{dir} 1px solid #7F8C8D


@font-face {
	font-family: 'fancy';
	src:url('http://cdn.fancy.support/fonts/fancy.eot?wypba3');
	src:url('http://cdn.fancy.support/fonts/fancy.eot?#iefixwypba3') format('embedded-opentype'),
		url('http://cdn.fancy.support/fonts/fancy.woff?wypba3') format('woff'),
		url('http://cdn.fancy.support/fonts/fancy.ttf?wypba3') format('truetype'),
		url('http://cdn.fancy.support/fonts/fancy.svg?wypba3#fancy') format('svg');
	font-weight: normal;
	font-style: normal;
}

[class^="fancy-icon-"], [class*=" fancy-icon-"] {
	font-family: 'fancy';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	user-select(none)
	font-size 32px

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.fancy-icon-pencil:before {
	content: "\e600";
}
.fancy-icon-cross:before {
	content: "\e601";
}
.fancy-icon-list:before {
	content: "\e602";
}


#fancy-chat
	position fixed

	left 50%
	top 50%

	width 500px
	margin-left -(@width / 2)
	height 525px
	margin-top -(@height / 2)

	z-index 1234

	font-size 14px
	color #000
	font-family "Open Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif

	background-color #e9e9e9
	border-radius(4px)

	*
		box-sizing(border-box)
		margin 0
		padding 0

	.send
		position relative
		height 15%
		mborder(left)
		mborder(right)
		mborder(bottom)
		border-bottom-left-radius 4px
		border-bottom-right-radius 4px

		.message
			width 80%
			height 100%
			margin 0
			padding 0.7% 1.25% 2.9% 3.9%

	.add-height
		height 100%

	.fancy-hide
		display none

#fancy-textarea
	width 100%
	height 100%
	resize none

	min-height 34px
	padding 0.6em 1em

	line-height 1.33
	vertical-align top

	outline none
	border none

	border-radius(4px)

#fancy-send
	position absolute
	right 4%
	top 6.25%
	width 15.5%
	height 75%
	line-height 60px

	cursor pointer
	display inline-block
	text-align center

	outline none
	border none
	background-color #c0392b
	color #fff

	border-radius(4px)
	user-select(none)

#fancy-header
	height 15%
	background-color #c0392b
	border-top-left-radius 4px
	border-top-right-radius 4px
	position relative

	span
		position relative
		top 32%
		left 5%
		font-size 18pt
		color #fff

	a
		position absolute
		right 40px
		top 32%
		cursor pointer
		color #fff

	.fancy-icon-cross
		right 8px

	.fancy-icon-pencil
		top 37.5%
		font-size 24px

#fancy-listings
	height 85%
	overflow-y auto
	mborder(left)
	mborder(right)
	mborder(bottom)
	border-bottom-left-radius 4px
	border-bottom-right-radius 4px

	.listing
		cursor pointer
		padding 10px 20px
		position relative
		color #7f8c8d

		&.unread
			color #000

		.avatar
			position absolute
			top 16px
			width 50px
			height 50px

		.text
			margin-left 60px
			margin-top 5px

		&:hover
			background-color #D3D3D3

		.title
			font-weight bold

		.time
			position absolute
			right 20px
			top 9px
			color #808080
			font-size 12px

		.content
			height 19px
			overflow hidden
			text-overflow ellipsis

		.reply
			font-style italic

#fancy-messages
	height 70%
	overflow-y auto
	padding 0 3.9%
	mborder(left)
	mborder(right)

	.message
		margin 7px 0
		width 100%
		position relative
		min-height 60px

	.text
		position relative
		border-radius(4px)
		padding 10px 15px
		background-color #fff
		word-wrap break-word
		box-shadow 0 1px 0 0 rgba(0, 0, 0, 0.1)

		&:after
			content ' '
			position absolute
			width 0
			height 0
			border 9px solid
			top 10px

		.name
			font-weight bold
			margin-bottom 3px

		.time
			position absolute
			top 10px
			right 15px
			font-size 12px
			color #808080

	.info
		width 50px
		text-align center
		position absolute

		.avatar
			margin 0 auto
			display block
			width 50px
			height 50px

	.out
		float left

		.text
			margin-left 70px

			&:after
				left -17px
				border-color transparent #fff transparent transparent

		.info
			left 0

	.in
		float right

		.text
			margin-right 70px

			&:after
				right -17px
				border-color transparent transparent transparent #fff

		.info
			right 0

	.out, .in
		clear both

.fancy-cf:before,
.fancy-cf:after
	content " "
	display table

.fancy-cf:after
	clear both