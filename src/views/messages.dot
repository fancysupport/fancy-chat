{{##def.message:param:
	<p class="message">{{! param.content }}</p>
#}}

{{##def.container:param:
	<div class="{{? param.incoming === true }}in{{??}}out{{?}}">
		{{#def.message:param}}
#}}

{{ var prev = it.incoming; }}
	{{#def.container:it}}

{{~ it.replies :m }}
	{{? m.incoming === prev }}
		{{#def.message:m}}
	{{??}}
		</div>{{#def.container:m}}
	{{?}}
	{{ prev = m.incoming; }}

{{~}}
</div>